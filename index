                            <span id="speed-value-supply" data-ar="متوسطة" data-en="Medium">متوسطة</span>
                        </div>
                    </div>
                    <div class="print-controls no-print">
                        <button id="print-all-supply" class="print-btn">
                            <i class="fas fa-print"></i> <span data-ar="طباعة جميع الجداول" data-en="Print All Tables">طباعة جميع الجداول</span>
                        </button>
                        <button id="print-pdf-supply" class="print-btn print-pdf">
                            <i class="fas fa-file-pdf"></i> <span data-ar="تصدير PDF" data-en="Export PDF">تصدير PDF</span>
                        </button>
                        <button id="print-single-supply" class="print-btn print-single">
                            <i class="fas fa-print"></i> <span data-ar="طباعة جدول واحد" data-en="Print Single Table">طباعة جدول واحد</span>
                        </button>
                    </div>
                    <div id="scroll-status-supply" class="auto-scroll-status hidden">
                        <i class="fas fa-sync-alt fa-spin"></i>
                        <span data-ar="جاري التمرير التلقائي..." data-en="Auto scrolling...">جاري التمرير التلقائي...</span>
                    </div>
                </div>

                <!-- Stats Section -->
                <div id="stats-section-supply">
                    <div class="stats-header">
                        <div class="stats-title" data-ar="إحصائيات التوريد" data-en="Supply Statistics">إحصائيات التوريد</div>
                        <button class="toggle-stats-btn" data-stats="supply">
                            <i class="fas fa-eye-slash"></i>
                            <span data-ar="إخفاء الإحصائيات" data-en="Hide Statistics">إخفاء الإحصائيات</span>
                        </button>
                    </div>
                    <div class="stats-container">
                        <div class="stat-card">
                            <div class="stat-number" id="total-items-supply">0</div>
                            <div class="stat-label" data-ar="إجمالي العناصر" data-en="Total Items">إجمالي العناصر</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-number" id="total-categories-supply">0</div>
                            <div class="stat-label" data-ar="عدد الفئات" data-en="Categories Count">عدد الفئات</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-number" id="total-branches-supply">0</div>
                            <div class="stat-label" data-ar="عدد الفروع" data-en="Branches Count">عدد الفروع</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-number" id="total-quantity-supply">0</div>
                            <div class="stat-label" data-ar="إجمالي الكمية" data-en="Total Quantity">إجمالي الكمية</div>
                        </div>
                    </div>
                </div>

                <!-- Filter Section -->
                <div class="filter-section">
                    <div class="filter-row">
                        <div class="filter-group">
                            <label class="filter-label" data-ar="الفئة:" data-en="Category:">الفئة:</label>
                            <select id="category-filter-supply" class="form-control" multiple="multiple">
                                <!-- سيتم ملؤها ديناميكياً -->
                            </select>
                        </div>
                        <div class="filter-group">
                            <label class="filter-label" data-ar="الفرع:" data-en="Branch:">الفرع:</label>
                            <select id="branch-filter-supply" class="form-control">
                                <option value="" data-ar="كل الفروع" data-en="All Branches">كل الفروع</option>
                                <!-- سيتم ملؤها ديناميكياً -->
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Messages -->
                <div id="message-container-supply"></div>

                <!-- Data Container -->
                <div class="data-container" id="scroll-container-supply">
                    <!-- Loading State -->
                    <div id="loading-state-supply" class="loading-spinner">
                        <div class="spinner"></div>
                        <span data-ar="جاري تحميل بيانات التوريد من السيرفر..." data-en="Loading supply data from server...">جاري تحميل بيانات التوريد من السيرفر...</span>
                    </div>

                    <!-- Empty State -->
                    <div id="empty-state-supply" class="empty-state hidden">
                        <div class="empty-icon">
                            <i class="fas fa-truck-loading"></i>
                        </div>
                        <h3 data-ar="لا توجد طلبات توريد في هذا القسم" data-en="No supply requests in this section">لا توجد طلبات توريد في هذا القسم</h3>
                        <p data-ar="لا توجد عناصر توريد متاحة للعرض حالياً" data-en="No supply items available for display">لا توجد عناصر توريد متاحة للعرض حالياً</p>
                    </div>

                    <!-- Supply Data -->
                    <div id="supply-data" class="hidden">
                        <!-- سيتم ملؤها ديناميكياً -->
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Print Preview Modal -->
    <div id="print-preview" class="print-preview">
        <!-- سيتم ملؤها ديناميكياً -->
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <!-- مكتبة html2pdf -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <script>
        // حالة التطبيق
        let appState = {
            currentLang: 'ar',
            currentTab: 'production',
            showStats: {
                production: true,
                supply: true
            },
            production: {
                isLoading: false,
                items: [],
                filteredItems: [],
                allCategories: [],
                allBranches: [],
                selectedCategories: [],
                selectedBranch: '',
                apiUrl: 'https://v1110-production.up.railway.app/api/orderProduction/getAll',
                autoScrollInterval: null,
                scrollSpeed: 5,
                isAutoScrolling: false,
                scrollDirection: 'down'
            },
            supply: {
                isLoading: false,
                items: [],
                filteredItems: [],
                allCategories: [],
                allBranches: [],
                selectedCategories: [],
                selectedBranch: '',
                apiUrl: 'https://v1110-production.up.railway.app/api/orderSupply/getAll',
                autoScrollInterval: null,
                scrollSpeed: 5,
                isAutoScrolling: false,
                scrollDirection: 'down'
            }
        };

        // تهيئة التطبيق
        $(document).ready(function() {
            initializeSelect2(); // تعريف الدالة أولاً قبل استدعائها
            loadProductionData();
            setupEventListeners();
            setupAutoScrollControls();
            setupLanguageToggle();
            setupStatsToggle();
            setupPrintControls();
        });

        // تهيئة Select2 - يجب تعريفها أولاً
        function initializeSelect2() {
            const placeholder = appState.currentLang === 'ar' ? 'اختر الفئات' : 'Select Categories';
            const branchPlaceholder = appState.currentLang === 'ar' ? 'اختر الفرع' : 'Select Branch';
            
            $('#category-filter-production, #category-filter-supply').select2({
                placeholder: placeholder,
                allowClear: true,
                closeOnSelect: false
            });

            $('#branch-filter-production, #branch-filter-supply').select2({
                placeholder: branchPlaceholder
            });
        }

        // إعداد عناصر التحكم في الطباعة
        function setupPrintControls() {
            // طباعة جميع الجداول للإنتاج
            $('#print-all-production').on('click', function() {
                printAllTables('production');
            });

            // طباعة PDF للإنتاج
            $('#print-pdf-production').on('click', function() {
                exportToPDF('production');
            });

            // طباعة جدول واحد للإنتاج
            $('#print-single-production').on('click', function() {
                showSingleTablePrintDialog('production');
            });

            // طباعة جميع الجداول للتوريد
            $('#print-all-supply').on('click', function() {
                printAllTables('supply');
            });

            // طباعة PDF للتوريد
            $('#print-pdf-supply').on('click', function() {
                exportToPDF('supply');
            });

            // طباعة جدول واحد للتوريد
            $('#print-single-supply').on('click', function() {
                showSingleTablePrintDialog('supply');
            });
        }

        // طباعة جميع الجداول
        function printAllTables(type) {
            const printContent = generatePrintContent(type, 'all');
            openPrintWindow(printContent, type);
        }

        // طباعة جدول واحد
        function printSingleTable(type, tableId) {
            const printContent = generatePrintContent(type, 'single', tableId);
            openPrintWindow(printContent, type);
        }

        // تصدير إلى PDF
        function exportToPDF(type) {
            const printContent = generatePrintContent(type, 'all');
            
            const options = {
                margin: [10, 10, 10, 10],
                filename: `${type === 'production' ? 'production' : 'supply'}_report.pdf`,
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { 
                    scale: 2,
                    useCORS: true,
                    letterRendering: true
                },
                jsPDF: { 
                    unit: 'mm', 
                    format: 'a4', 
                    orientation: 'landscape' 
                }
            };

            // إنشاء عنصر مؤقت للطباعة
            const tempElement = document.createElement('div');
            tempElement.innerHTML = printContent;
            document.body.appendChild(tempElement);

            // إنشاء PDF
            html2pdf()
                .from(tempElement)
                .set(options)
                .save()
                .then(() => {
                    // إزالة العنصر المؤقت
                    document.body.removeChild(tempElement);
                    
                    const message = appState.currentLang === 'ar' 
                        ? '✅ تم تصدير PDF بنجاح'
                        : '✅ PDF exported successfully';
                    showMessage(type, message, 'success');
                })
                .catch((error) => {
                    console.error('PDF export error:', error);
                    document.body.removeChild(tempElement);
                    
                    const message = appState.currentLang === 'ar' 
                        ? '❌ فشل في تصدير PDF'
                        : '❌ Failed to export PDF';
                    showMessage(type, message, 'error');
                });
        }

        // إنشاء محتوى الطباعة
        function generatePrintContent(type, mode = 'all', tableId = null) {
            const state = appState[type];
            const items = mode === 'single' && tableId 
                ? state.filteredItems.filter(item => item.category === tableId)
                : state.filteredItems;
            
            const title = type === 'production' 
                ? (appState.currentLang === 'ar' ? 'تقرير الإنتاج اليومي' : 'Daily Production Report')
                : (appState.currentLang === 'ar' ? 'تقرير التوريد' : 'Supply Report');
            
            const date = new Date().toLocaleDateString(appState.currentLang === 'ar' ? 'ar-SA' : 'en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            
            let content = `
                <div class="print-section">
                    <div class="print-header">
                        <h1 class="print-title">${title}</h1>
                        <div class="print-date">${date}</div>
                    </div>
            `;
            
            if (mode === 'single' && tableId) {
                content += generateSingleTablePrintContent(items, state.allBranches);
            } else {
                content += generateAllTablesPrintContent(items, state.allBranches);
            }
            
            content += `
                    <div class="print-footer">
                        <p>${appState.currentLang === 'ar' ? 'نظام مصنع السلطة' : 'Salad Factory System'}</p>
                        <p>${date}</p>
                    </div>
                </div>
            `;
            
            return content;
        }

        // إنشاء محتوى طباعة جميع الجداول
        function generateAllTablesPrintContent(items, branches) {
            const organizedData = organizeItemsByMainCategory(items);
            let content = '';
            
            Object.keys(organizedData).forEach(category => {
                const categoryProducts = organizedData[category];
                content += generateTablePrintContent(category, categoryProducts, branches);
            });
            
            return content;
        }

        // إنشاء محتوى طباعة جدول واحد
        function generateSingleTablePrintContent(items, branches) {
            if (!items || items.length === 0) return '';
            const category = items[0].category;
            return generateTablePrintContent(category, items, branches);
        }

        // إنشاء محتوى الجدول للطباعة
        function generateTablePrintContent(category, products, branches) {
            const organizedData = organizeItemsByBranchAndProductForCategory(products);
            const uniqueProducts = getUniqueProductsFromOrganizedData(organizedData);
            
            if (uniqueProducts.length === 0) return '';
            
            const notSpecifiedText = appState.currentLang === 'ar' ? 'لم يحدد' : 'Not specified';
            const productsText = appState.currentLang === 'ar' ? 'المنتجات' : 'Products';
            const sizeUnitText = appState.currentLang === 'ar' ? '(الحجم / الوحدة)' : '(Size / Unit)';
            const totalText = appState.currentLang === 'ar' ? 'الإجمالي' : 'Total';
            
            return `
                <div style="page-break-inside: avoid; margin-bottom: 20px;">
                    <h2 style="color: #2E5E3A; text-align: center; margin-bottom: 15px; padding-bottom: 10px; border-bottom: 2px solid #2E5E3A;">
                        ${category}
                    </h2>
                    <table style="width: 100%; border-collapse: collapse; font-size: 12px; margin-bottom: 20px;">
                        <thead>
                            <tr>
                                <th style="background-color: #f0f0f0; padding: 8px; text-align: center; border: 1px solid #ddd; min-width: 200px;">
                                    <div>${productsText}</div>
                                    <div style="font-size: 10px; color: #666; margin-top: 4px;">${sizeUnitText}</div>
                                </th>
                                ${branches.map(branch => `
                                    <th style="background-color: #f0f0f0; padding: 8px; text-align: center; border: 1px solid #ddd; font-size: 11px;">
                                        ${getAbbreviatedBranchName(branch)}
                                    </th>
                                `).join('')}
                                <th style="background-color: #f0f0f0; padding: 8px; text-align: center; border: 1px solid #ddd; min-width: 80px; color: #2E5E3A;">
                                    ${totalText}
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            ${uniqueProducts.map(product => `
                                <tr>
                                    <td style="padding: 8px; text-align: right; border: 1px solid #ddd;">
                                        <div style="font-weight: bold;">${product.name}</div>
                                        <div style="font-size: 10px; color: #666;">
                                            ${product.package && product.package !== '0' && product.package !== 'null' ? product.package : ''} 
                                            ${product.packageUnitname ? product.packageUnitname : ''}
                                            ${!product.package || product.package === '0' || product.package === 'null' ? notSpecifiedText : ''}
                                        </div>
                                    </td>
                                    ${branches.map(branch => `
                                        <td style="padding: 8px; text-align: center; border: 1px solid #ddd;">
                                            ${organizedData[branch] && organizedData[branch][product.name] 
                                                ? formatNumber(organizedData[branch][product.name].requestedQty) 
                                                : '-'}
                                        </td>
                                    `).join('')}
                                    <td style="padding: 8px; text-align: center; border: 1px solid #ddd; background-color: #f9f9f9; font-weight: bold; color: #2E5E3A;">
                                        ${formatNumber(calculateTotalForProduct(product.name, organizedData))}
                                    </td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
            `;
        }

        // فتح نافذة الطباعة
        function openPrintWindow(printContent, type) {
            const printWindow = window.open('', '_blank');
            const title = type === 'production' 
                ? (appState.currentLang === 'ar' ? 'طباعة تقرير الإنتاج' : 'Print Production Report')
                : (appState.currentLang === 'ar' ? 'طباعة تقرير التوريد' : 'Print Supply Report');
            
            printWindow.document.write(`
                <!DOCTYPE html>
                <html lang="${appState.currentLang === 'ar' ? 'ar' : 'en'}" dir="${appState.currentLang === 'ar' ? 'rtl' : 'ltr'}">
                <head>
                    <title>${title}</title>
                    <meta charset="UTF-8">
                    <meta name="viewport" content="width=device-width, initial-scale=1.0">
                    <style>
                        @media print {
                            @page {
                                size: A4 landscape;
                                margin: 1cm;
                            }
                            
                            body {
                                font-family: 'Cairo', 'Arial', sans-serif;
                                direction: ${appState.currentLang === 'ar' ? 'rtl' : 'ltr'};
                            }
                            
                            table {
                                page-break-inside: avoid;
                                width: 100%;
                            }
                            
                            h2 {
                                page-break-after: avoid;
                            }
                        }
                        
                        body {
                            font-family: 'Cairo', 'Arial', sans-serif;
                            margin: 0;
                            padding: 20px;
                            direction: ${appState.currentLang === 'ar' ? 'rtl' : 'ltr'};
                        }
                        
                        .print-header {
                            text-align: center;
                            margin-bottom: 30px;
                            padding-bottom: 15px;
                            border-bottom: 3px solid #2E5E3A;
                        }
                        
                        .print-title {
                            color: #2E5E3A;
                            font-size: 24px;
                            margin: 0;
                        }
                        
                        .print-date {
                            color: #666;
                            font-size: 14px;
                            margin-top: 5px;
                        }
                        
                        .print-footer {
                            text-align: center;
                            margin-top: 30px;
                            padding-top: 15px;
                            border-top: 1px solid #ddd;
                            color: #666;
                            font-size: 12px;
                        }
                        
                        table {
                            width: 100%;
                            border-collapse: collapse;
                            margin-bottom: 30px;
                            font-size: 12px;
                        }
                        
                        th {
                            background-color: #f5f5f5;
                            padding: 10px;
                            text-align: center;
                            border: 1px solid #ddd;
                            font-weight: bold;
                        }
                        
                        td {
                            padding: 8px;
                            border: 1px solid #ddd;
                        }
                        
                        .total-cell {
                            background-color: #f0f0f0;
                            font-weight: bold;
                        }
                    </style>
                </head>
                <body>
                    ${printContent}
                    <script>
                        window.onload = function() {
                            window.print();
                            setTimeout(function() {
                                window.close();
                            }, 500);
                        };
                    <\/script>
                </body>
                </html>
            `);
            
            printWindow.document.close();
        }

        // عرض حوار طباعة جدول واحد
        function showSingleTablePrintDialog(type) {
            const state = appState[type];
            const categories = [...new Set(state.filteredItems.map(item => item.category))];
            
            if (categories.length === 0) {
                const message = appState.currentLang === 'ar' 
                    ? '❌ لا توجد جداول متاحة للطباعة'
                    : '❌ No tables available for printing';
                showMessage(type, message, 'error');
                return;
            }
            
            const dialogTitle = appState.currentLang === 'ar' 
                ? 'اختر الجدول للطباعة' 
                : 'Select table to print';
            
            const categoryList = categories.map(category => 
                `<option value="${category}">${category}</option>`
            ).join('');
            
            const dialogContent = `
                <div style="padding: 20px; background: white; border-radius: 10px; min-width: 300px;">
                    <h3 style="margin-bottom: 15px; color: #2E5E3A;">${dialogTitle}</h3>
                    <select id="print-table-select" style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ddd; border-radius: 5px;">
                        ${categoryList}
                    </select>
                    <div style="display: flex; justify-content: flex-end; gap: 10px;">
                        <button id="print-cancel" style="padding: 8px 15px; background: #ccc; border: none; border-radius: 5px; cursor: pointer;">
                            ${appState.currentLang === 'ar' ? 'إلغاء' : 'Cancel'}
                        </button>
                        <button id="print-confirm" style="padding: 8px 15px; background: #2E5E3A; color: white; border: none; border-radius: 5px; cursor: pointer;">
                            ${appState.currentLang === 'ar' ? 'طباعة' : 'Print'}
                        </button>
                    </div>
                </div>
            `;
            
            // إنشاء عنصر الحوار
            const dialog = document.createElement('div');
            dialog.id = 'print-dialog';
            dialog.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.5);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 9999;
            `;
            dialog.innerHTML = dialogContent;
            
            document.body.appendChild(dialog);
            
            // إضافة مستمعي الأحداث
            $('#print-cancel').on('click', function() {
                document.body.removeChild(dialog);
            });
            
            $('#print-confirm').on('click', function() {
                const selectedTable = $('#print-table-select').val();
                if (selectedTable) {
                    printSingleTable(type, selectedTable);
                    document.body.removeChild(dialog);
                }
            });
        }

        // إضافة أزرار الطباعة على البطاقات
        function addPrintButtonsToCards(type) {
            $(`#${type}-data .card`).each(function(index) {
                const card = $(this);
                const category = card.find('.card-header').text().trim();
                
                if (!card.find('.card-print-controls').length) {
                    const printControls = `
                        <div class="card-print-controls no-print">
                            <button class="card-print-btn print-card" data-category="${category}" title="${appState.currentLang === 'ar' ? 'طباعة هذا الجدول' : 'Print this table'}">
                                <i class="fas fa-print"></i>
                            </button>
                            <button class="card-print-btn print-pdf print-card-pdf" data-category="${category}" title="${appState.currentLang === 'ar' ? 'تصدير PDF' : 'Export PDF'}">
                                <i class="fas fa-file-pdf"></i>
                            </button>
                        </div>
                    `;
                    card.prepend(printControls);
                }
            });
            
            // إضافة مستمعي الأحداث لأزرار البطاقات
            $(`.print-card`).off('click').on('click', function() {
                const category = $(this).data('category');
                printSingleTable(type, category);
            });
            
            $(`.print-card-pdf`).off('click').on('click', function() {
                const category = $(this).data('category');
                const printContent = generatePrintContent(type, 'single', category);
                
                const options = {
                    margin: [10, 10, 10, 10],
                    filename: `${category.replace(/\s+/g, '_')}.pdf`,
                    image: { type: 'jpeg', quality: 0.98 },
                    html2canvas: { scale: 2 },
                    jsPDF: { unit: 'mm', format: 'a4', orientation: 'landscape' }
                };
                
                const tempElement = document.createElement('div');
                tempElement.innerHTML = printContent;
                document.body.appendChild(tempElement);
                
                html2pdf()
                    .from(tempElement)
                    .set(options)
                    .save()
                    .then(() => {
                        document.body.removeChild(tempElement);
                        const message = appState.currentLang === 'ar' 
                            ? `✅ تم تصدير جدول ${category} إلى PDF`
                            : `✅ Table ${category} exported to PDF`;
                        showMessage(type, message, 'success');
                    })
                    .catch((error) => {
                        console.error('PDF export error:', error);
                        document.body.removeChild(tempElement);
                        const message = appState.currentLang === 'ar' 
                            ? `❌ فشل في تصدير جدول ${category}`
                            : `❌ Failed to export table ${category}`;
                        showMessage(type, message, 'error');
                    });
            });
        }

        // إعداد تبديل اللغة
        function setupLanguageToggle() {
            $('.lang-btn').on('click', function() {
                const lang = $(this).data('lang');
                switchLanguage(lang);
            });
        }

        // تبديل اللغة
        function switchLanguage(lang) {
            appState.currentLang = lang;
            
            // تحديث الأزرار النشطة
            $('.lang-btn').removeClass('active');
            $(`.lang-btn[data-lang="${lang}"]`).addClass('active');
            
            // تحديث جميع النصوص
            $('[data-ar]').each(function() {
                const arText = $(this).data('ar');
                const enText = $(this).data('en');
                $(this).text(lang === 'ar' ? arText : enText);
            });
            
            // تحديث اتجاه الصفحة
            if (lang === 'ar') {
                $('html').attr('dir', 'rtl');
                $('body').css('direction', 'rtl');
            } else {
                $('html').attr('dir', 'ltr');
                $('body').css('direction', 'ltr');
            }
            
            // إعادة تهيئة Select2 مع النصوص الجديدة
            initializeSelect2();
        }

        // إعداد تبديل إظهار/إخفاء الإحصائيات
        function setupStatsToggle() {
            $('.toggle-stats-btn').on('click', function() {
                const statsType = $(this).data('stats');
                toggleStats(statsType);
            });
        }

        // تبديل إظهار/إخفاء الإحصائيات
        function toggleStats(type) {
            appState.showStats[type] = !appState.showStats[type];
            const statsContainer = $(`#stats-section-${type} .stats-container`);
            const toggleBtn = $(`.toggle-stats-btn[data-stats="${type}"]`);
            
            if (appState.showStats[type]) {
                statsContainer.slideDown();
                toggleBtn.html('<i class="fas fa-eye-slash"></i> <span data-ar="إخفاء الإحصائيات" data-en="Hide Statistics">إخفاء الإحصائيات</span>');
                // تحديث النص بناءً على اللغة الحالية
                const span = toggleBtn.find('span');
                span.text(appState.currentLang === 'ar' ? 'إخفاء الإحصائيات' : 'Hide Statistics');
            } else {
                statsContainer.slideUp();
                toggleBtn.html('<i class="fas fa-eye"></i> <span data-ar="إظهار الإحصائيات" data-en="Show Statistics">إظهار الإحصائيات</span>');
                // تحديث النص بناءً على اللغة الحالية
                const span = toggleBtn.find('span');
                span.text(appState.currentLang === 'ar' ? 'إظهار الإحصائيات' : 'Show Statistics');
            }
        }

        // إعداد عناصر التحكم في التمرير التلقائي
        function setupAutoScrollControls() {
            // عناصر التحكم للإنتاج
            $('#scroll-speed-production').on('input', function() {
                appState.production.scrollSpeed = parseInt($(this).val());
                updateSpeedDisplay('production');
                
                if (appState.production.isAutoScrolling) {
                    stopAutoScroll('production');
                    startAutoScroll('production');
                }
            });

            $('#start-scroll-production').on('click', function() {
                startAutoScroll('production');
            });

            $('#stop-scroll-production').on('click', function() {
                stopAutoScroll('production');
            });

            $('#reset-scroll-production').on('click', function() {
                resetScroll('production');
            });

            // عناصر التحكم للتوريد
            $('#scroll-speed-supply').on('input', function() {
                appState.supply.scrollSpeed = parseInt($(this).val());
                updateSpeedDisplay('supply');
                
                if (appState.supply.isAutoScrolling) {
                    stopAutoScroll('supply');
                    startAutoScroll('supply');
                }
            });

            $('#start-scroll-supply').on('click', function() {
                startAutoScroll('supply');
            });

            $('#stop-scroll-supply').on('click', function() {
                stopAutoScroll('supply');
            });

            $('#reset-scroll-supply').on('click', function() {
                resetScroll('supply');
            });
        }

        // بدء التمرير التلقائي
        function startAutoScroll(type) {
            const state = appState[type];
            if (state.isAutoScrolling) return;
            
            const container = $(`#scroll-container-${type}`)[0];
            if (!container) return;
            
            state.isAutoScrolling = true;
            state.scrollDirection = 'down';
            $(`#start-scroll-${type}`).addClass('active');
            $(`#scroll-status-${type}`).removeClass('hidden');
            
            const speedMap = {
                1: 80, 2: 60, 3: 45, 4: 35, 5: 25, 
                6: 20, 7: 15, 8: 12, 9: 8, 10: 5
            };
            
            const scrollInterval = speedMap[state.scrollSpeed] || 25;
            
            state.autoScrollInterval = setInterval(() => {
                if (state.scrollDirection === 'down') {
                    container.scrollTop += 2;
                    
                    if (container.scrollTop + container.clientHeight >= container.scrollHeight - 10) {
                        state.scrollDirection = 'up';
                        setTimeout(() => {
                            container.scrollTop -= 2;
                        }, 500);
                    }
                } else {
                    container.scrollTop -= 2;
                    
                    if (container.scrollTop <= 10) {
                        state.scrollDirection = 'down';
                        setTimeout(() => {
                            container.scrollTop += 2;
                        }, 500);
                    }
                }
            }, scrollInterval);
            
            const message = appState.currentLang === 'ar' 
                ? '🔄 تم تفعيل التمرير التلقائي - سيتحرك تلقائياً لأعلى ولأسفل'
                : '🔄 Auto scroll activated - will move up and down automatically';
            showMessage(type, message, 'success');
        }

        // إيقاف التمرير التلقائي
        function stopAutoScroll(type) {
            const state = appState[type];
            if (!state.isAutoScrolling) return;
            
            clearInterval(state.autoScrollInterval);
            state.isAutoScrolling = false;
            $(`#start-scroll-${type}`).removeClass('active');
            $(`#scroll-status-${type}`).addClass('hidden');
            
            const message = appState.currentLang === 'ar' 
                ? '⏸️ تم إيقاف التمرير التلقائي'
                : '⏸️ Auto scroll stopped';
            showMessage(type, message, 'warning');
        }

        // الرجوع للأعلى
        function resetScroll(type) {
            const container = $(`#scroll-container-${type}`)[0];
            if (container) {
                container.scrollTop = 0;
                appState[type].scrollDirection = 'down';
            }
            const message = appState.currentLang === 'ar' 
                ? '⬆️ تم الرجوع إلى أعلى الصفحة'
                : '⬆️ Returned to top of page';
            showMessage(type, message, 'success');
        }

        // تحديث عرض السرعة
        function updateSpeedDisplay(type) {
            const speedLabelsAr = {
                1: 'بطيء جداً', 2: 'بطيء', 3: 'متوسط بطيء', 4: 'متوسطة', 
                5: 'متوسطة سريعة', 6: 'سريعة', 7: 'سريعة جداً', 
                8: 'أسرع', 9: 'أقصى سرعة', 10: 'أقصى سرعة'
            };
            
            const speedLabelsEn = {
                1: 'Very Slow', 2: 'Slow', 3: 'Medium Slow', 4: 'Medium', 
                5: 'Medium Fast', 6: 'Fast', 7: 'Very Fast', 
                8: 'Faster', 9: 'Maximum', 10: 'Maximum'
            };
            
            const speedLabels = appState.currentLang === 'ar' ? speedLabelsAr : speedLabelsEn;
            $(`#speed-value-${type}`).text(speedLabels[appState[type].scrollSpeed] || 'Medium');
        }

        // إعداد مستمعي الأحداث
        function setupEventListeners() {
            // التنقل بين التبويبات
            $('.nav-tab').on('click', function() {
                const tab = $(this).data('tab');
                switchTab(tab);
            });

            // فلتر الفئات للإنتاج
            $('#category-filter-production').on('change', function() {
                appState.production.selectedCategories = $(this).val() || [];
                filterItems('production');
            });

            // فلتر الفروع للإنتاج
            $('#branch-filter-production').on('change', function() {
                appState.production.selectedBranch = $(this).val() || '';
                filterItems('production');
            });

            // فلتر الفئات للتوريد
            $('#category-filter-supply').on('change', function() {
                appState.supply.selectedCategories = $(this).val() || [];
                filterItems('supply');
            });

            // فلتر الفروع للتوريد
            $('#branch-filter-supply').on('change', function() {
                appState.supply.selectedBranch = $(this).val() || '';
                filterItems('supply');
            });

            // زر التحديث
            $('#refresh-btn').on('click', function() {
                if (appState.currentTab === 'production') {
                    loadProductionData();
                } else {
                    loadSupplyData();
                }
            });
        }

        // تبديل التبويبات
        function switchTab(tab) {
            // تحديث التبويب النشط
            $('.nav-tab').removeClass('active');
            $(`.nav-tab[data-tab="${tab}"]`).addClass('active');

            // إخفاء كل المحتوى
            $('.tab-content').addClass('hidden');

            // إظهار المحتوى المحدد
            $(`#${tab}-tab`).removeClass('hidden');

            appState.currentTab = tab;
            
            // إيقاف التمرير التلقائي عند تبديل التبويبات
            stopAutoScroll('production');
            stopAutoScroll('supply');
            
            // تحميل بيانات التوريد إذا لم تكن محملة مسبقاً
            if (tab === 'supply' && appState.supply.items.length === 0) {
                loadSupplyData();
            }
        }

        // تحميل بيانات الإنتاج من API
        async function loadProductionData() {
            setLoadingState('production', true);
            clearMessages('production');
            $('#refresh-btn').prop('disabled', true);

            try {
                console.log('جاري جلب بيانات الإنتاج من:', appState.production.apiUrl);
                
                const proxyUrl = 'https://cors-anywhere.herokuapp.com/';
                const targetUrl = appState.production.apiUrl;
                
                const response = await fetch(proxyUrl + targetUrl, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (!response.ok) {
                    throw new Error(`خطأ في الشبكة: ${response.status} ${response.statusText}`);
                }

                const data = await response.json();
                console.log('بيانات الإنتاج المستلمة:', data);

                if (data.status === 200) {
                    processProductionData(data);
                    const message = appState.currentLang === 'ar' 
                        ? '✅ تم تحميل بيانات الإنتاج بنجاح'
                        : '✅ Production data loaded successfully';
                    showMessage('production', message, 'success');
                } else {
                    throw new Error(data.message || 'خطأ في استجابة السيرفر');
                }
            } catch (error) {
                console.error('Error loading production data:', error);
                
                try {
                    const message = appState.currentLang === 'ar' 
                        ? '🔄 جاري محاولة بديلة لتحميل البيانات...'
                        : '🔄 Trying alternative method to load data...';
                    showMessage('production', message, 'warning');
                    await loadWithoutProxy('production');
                } catch (secondError) {
                    console.error('Second attempt failed:', secondError);
                    const message = appState.currentLang === 'ar' 
                        ? `❌ فشل في تحميل بيانات الإنتاج: ${error.message}`
                        : `❌ Failed to load production data: ${error.message}`;
                    showMessage('production', message, 'error');
                    loadSampleData('production');
                }
            } finally {
                setLoadingState('production', false);
                $('#refresh-btn').prop('disabled', false);
            }
        }

        // تحميل بيانات التوريد من API
        async function loadSupplyData() {
            setLoadingState('supply', true);
            clearMessages('supply');
            $('#refresh-btn').prop('disabled', true);

            try {
                console.log('جاري جلب بيانات التوريد من:', appState.supply.apiUrl);
                
                const proxyUrl = 'https://cors-anywhere.herokuapp.com/';
                const targetUrl = appState.supply.apiUrl;
                
                const response = await fetch(proxyUrl + targetUrl, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (!response.ok) {
                    throw new Error(`خطأ في الشبكة: ${response.status} ${response.statusText}`);
                }

                const data = await response.json();
                console.log('بيانات التوريد المستلمة:', data);

                if (data.status === 200) {
                    processSupplyData(data);
                    const message = appState.currentLang === 'ar' 
                        ? '✅ تم تحميل بيانات التوريد بنجاح'
                        : '✅ Supply data loaded successfully';
                    showMessage('supply', message, 'success');
                } else {
                    throw new Error(data.message || 'خطأ في استجابة السيرفر');
                }
            } catch (error) {
                console.error('Error loading supply data:', error);
                
                try {
                    const message = appState.currentLang === 'ar' 
                        ? '🔄 جاري محاولة بديلة لتحميل البيانات...'
                        : '🔄 Trying alternative method to load data...';
                    showMessage('supply', message, 'warning');
                    await loadWithoutProxy('supply');
                } catch (secondError) {
                    console.error('Second attempt failed:', secondError);
                    const message = appState.currentLang === 'ar' 
                        ? `❌ فشل في تحميل بيانات التوريد: ${error.message}`
                        : `❌ Failed to load supply data: ${error.message}`;
                    showMessage('supply', message, 'error');
                    loadSampleData('supply');
                }
            } finally {
                setLoadingState('supply', false);
                $('#refresh-btn').prop('disabled', false);
            }
        }

        // محاولة التحميل بدون proxy
        async function loadWithoutProxy(type) {
            try {
                const response = await fetch(appState[type].apiUrl, {
                    method: 'GET',
                    mode: 'cors',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                if (!response.ok) {
                    throw new Error(`خطأ في الشبكة: ${response.status}`);
                }

                const data = await response.json();
                if (type === 'production') {
                    processProductionData(data);
                } else {
                    processSupplyData(data);
                }
                const message = appState.currentLang === 'ar' 
                    ? '✅ تم تحميل البيانات بنجاح (بدون proxy)'
                    : '✅ Data loaded successfully (without proxy)';
                showMessage(type, message, 'success');
            } catch (error) {
                throw error;
            }
        }

        // تحميل بيانات المثال (للطوارئ)
        function loadSampleData(type) {
            const sampleData = {
                data: [],
                itemsnumber: 0,
                status: 200
            };
            
            if (type === 'production') {
                processProductionData(sampleData);
            } else {
                processSupplyData(sampleData);
            }
            const message = appState.currentLang === 'ar' 
                ? '⚠️ تم تحميل بيانات تجريبية للعرض'
                : '⚠️ Loaded sample data for display';
            showMessage(type, message, 'warning');
        }

        // معالجة بيانات الإنتاج
        function processProductionData(data) {
            const productionData = data.data || [];
            
            console.log('عدد عناصر الإنتاج المستلمة:', productionData.length);
            
            const filteredProductionData = productionData.filter(item => item.isSend === false);
            
            console.log('عدد عناصر الإنتاج بعد التصفية:', filteredProductionData.length);
            
            const combinedItems = {};
            
            filteredProductionData.forEach(item => {
                try {
                    const branchName = item.branch?.name || 'غير معروف';
                    const categoryName = item.mainProductOP?.name || 'غير معروف';
                    const productName = item.product?.name || 'غير معروف';
                    const packageInfo = item.package || '0';
                    const packageUnit = item.packageUnit?.name || '';
                    
                    const productKey = `${productName}-${packageInfo}-${categoryName}-${branchName}`;
                    
                    if (combinedItems[productKey]) {
                        combinedItems[productKey].requestedQty += parseFloat(item.qty) || 0;
                    } else {
                        combinedItems[productKey] = {
                            id: item._id || '',
                            productId: item.product?._id || '',
                            name: productName,
                            package: packageInfo,
                            quantity: 0,
                            requestedQty: parseFloat(item.qty) || 0,
                            category: categoryName,
                            branch: branchName,
                            orderName: item.name || '',
                            packageUnitname: packageUnit,
                            isSend: item.isSend || false
                        };
                    }
                } catch (e) {
                    console.error("Error processing production item:", e, item);
                }
            });
            
            appState.production.items = Object.values(combinedItems);
            console.log('عدد عناصر الإنتاج بعد التجميع:', appState.production.items.length);
            
            updateStatistics('production');
            updateFilterOptions('production');
            filterItems('production');
        }

        // معالجة بيانات التوريد
        function processSupplyData(data) {
            const supplyData = data.data || [];
            
            console.log('عدد عناصر التوريد المستلمة:', supplyData.length);
            
            const filteredSupplyData = supplyData.filter(item => item.isSend === false);
            
            console.log('عدد عناصر التوريد بعد التصفية:', filteredSupplyData.length);
            
            const combinedItems = {};
            
            filteredSupplyData.forEach(item => {
                try {
                    const branchName = item.branch?.name || 'غير معروف';
                    const categoryName = item.mainProductOP?.name || 'غير معروف';
                    const productName = item.product?.name || 'غير معروف';
                    const packageInfo = item.package || '0';
                    const packageUnit = item.packageUnit?.name || '';
                    
                    const productKey = `${productName}-${packageInfo}-${categoryName}-${branchName}`;
                    
                    if (combinedItems[productKey]) {
                        combinedItems[productKey].requestedQty += parseFloat(item.qty) || 0;
                    } else {
                        combinedItems[productKey] = {
                            id: item._id || '',
                            productId: item.product?._id || '',
                            name: productName,
                            package: packageInfo,
                            quantity: 0,
                            requestedQty: parseFloat(item.qty) || 0,
                            category: categoryName,
                            branch: branchName,
                            orderName: item.name || '',
                            packageUnitname: packageUnit,
                            isSend: item.isSend || false
                        };
                    }
                } catch (e) {
                    console.error("Error processing supply item:", e, item);
                }
            });
            
            appState.supply.items = Object.values(combinedItems);
            console.log('عدد عناصر التوريد بعد التجميع:', appState.supply.items.length);
            
            updateStatistics('supply');
            updateFilterOptions('supply');
            filterItems('supply');
        }

        // تحديث الإحصائيات
        function updateStatistics(type) {
            const state = appState[type];
            const totalItems = state.items.length;
            const totalCategories = new Set(state.items.map(item => item.category)).size;
            const totalBranches = new Set(state.items.map(item => item.branch)).size;
            const totalQuantity = state.items.reduce((sum, item) => sum + item.requestedQty, 0);
            
            $(`#total-items-${type}`).text(totalItems);
            $(`#total-categories-${type}`).text(totalCategories);
            $(`#total-branches-${type}`).text(totalBranches);
            $(`#total-quantity-${type}`).text(formatNumber(totalQuantity));
        }

        // تحديث خيارات الفلتر
        function updateFilterOptions(type) {
            const state = appState[type];
            
            // تحديث الفئات
            const uniqueCategories = [...new Set(state.items.map(item => item.category).filter(Boolean))];
            state.allCategories = uniqueCategories.sort();
            
            $(`#category-filter-${type}`).empty();
            uniqueCategories.forEach(category => {
                $(`#category-filter-${type}`).append(new Option(category, category, false, false));
            });
            
            // تحديد جميع الفئات كافتراضي
            $(`#category-filter-${type}`).val(uniqueCategories).trigger('change');
            state.selectedCategories = uniqueCategories;
            
            // تحديث الفروع
            const uniqueBranches = [...new Set(state.items.map(item => item.branch).filter(Boolean))];
            state.allBranches = getOrderedBranches(uniqueBranches);
            
            $(`#branch-filter-${type}`).empty();
            const allBranchesText = appState.currentLang === 'ar' ? 'كل الفروع' : 'All Branches';
            $(`#branch-filter-${type}`).append(new Option(allBranchesText, '', false, false));
            state.allBranches.forEach(branch => {
                $(`#branch-filter-${type}`).append(new Option(branch, branch, false, false));
            });
        }

        // تصفية العناصر
        function filterItems(type) {
            const state = appState[type];
            let tempItems = [...state.items];
            
            // تطبيق فلتر الفئات
            if (state.selectedCategories.length > 0 && 
                state.selectedCategories.length !== state.allCategories.length) {
                tempItems = tempItems.filter(item => 
                    state.selectedCategories.includes(item.category)
                );
            }
            
            // تطبيق فلتر الفروع
            if (state.selectedBranch) {
                tempItems = tempItems.filter(item => 
                    item.branch === state.selectedBranch
                );
            }
            
            state.filteredItems = tempItems;
            renderData(type);
        }

        // عرض البيانات
        function renderData(type) {
            const container = type === 'production' ? $('#production-data') : $('#supply-data');
            const state = appState[type];
            
            if (state.filteredItems.length === 0) {
                $(`#empty-state-${type}`).removeClass('hidden');
                container.addClass('hidden');
                return;
            }
            
            $(`#empty-state-${type}`).addClass('hidden');
            container.removeClass('hidden');
            
            const organizedData = organizeItemsByMainCategory(state.filteredItems);
            
            let html = '';
            
            Object.keys(organizedData).forEach(category => {
                const categoryProducts = organizedData[category];
                html += buildCategorySection(category, categoryProducts, state.allBranches);
            });
            
            container.html(html);
            
            // إضافة أزرار الطباعة للبطاقات
            setTimeout(() => {
                addPrintButtonsToCards(type);
            }, 100);
        }

        // تنظيم البيانات حسب الفئة الرئيسية
        function organizeItemsByMainCategory(items) {
            const organizedData = {};
            
            items.forEach(item => {
                if (!organizedData[item.category]) {
                    organizedData[item.category] = [];
                }
                organizedData[item.category].push(item);
            });
            
            Object.keys(organizedData).forEach(category => {
                organizedData[category].sort((a, b) => a.name.localeCompare(b.name));
            });
            
            return organizedData;
        }

        // بناء قسم الفئة
        function buildCategorySection(category, products, allBranches) {
            const organizedData = organizeItemsByBranchAndProductForCategory(products);
            const branches = getOrderedBranches(allBranches);
            
            return `
                <div class="card">
                    <div class="card-header">${category}</div>
                    <div class="card-body">
                        ${buildProductsTable(organizedData, branches)}
                    </div>
                </div>
            `;
        }

        // تنظيم البيانات حسب الفروع والمنتجات لفئة معينة
        function organizeItemsByBranchAndProductForCategory(products) {
            const organizedData = {};
            
            products.forEach(item => {
                if (!organizedData[item.branch]) {
                    organizedData[item.branch] = {};
                }
                
                if (!organizedData[item.branch][item.name]) {
                    organizedData[item.branch][item.name] = {
                        ...item,
                        requestedQty: 0
                    };
                }
                
                organizedData[item.branch][item.name].requestedQty += item.requestedQty;
            });
            
            return organizedData;
        }

        // ترتيب الفروع
        function getOrderedBranches(branches) {
            return branches.sort((a, b) => {
                const firstCharA = a.charAt(0).toUpperCase();
                const firstCharB = b.charAt(0).toUpperCase();
                
                const getWeight = (char) => {
                    if (char === 'M') return 1;
                    if (char === 'S') return 2;
                    if (char === 'A') return 3;
                    return 4;
                };
                
                const weightA = getWeight(firstCharA);
                const weightB = getWeight(firstCharB);
                
                if (weightA !== weightB) {
                    return weightA - weightB;
                }
                
                return a.localeCompare(b);
            });
        }

        // بناء جدول المنتجات
        function buildProductsTable(organizedData, branches) {
            const uniqueProducts = getUniqueProductsFromOrganizedData(organizedData);
            
            if (uniqueProducts.length === 0) {
                const noProductsText = appState.currentLang === 'ar' 
                    ? 'لا توجد منتجات في هذه الفئة' 
                    : 'No products in this category';
                return `<p class="text-center">${noProductsText}</p>`;
            }
            
            return `
                <div class="table-container">
                    <table class="production-table">
                        ${buildTableHeader(branches)}
                        ${buildTableBody(uniqueProducts, branches, organizedData)}
                    </table>
                </div>
            `;
        }

        // الحصول على المنتجات الفريدة
        function getUniqueProductsFromOrganizedData(organizedData) {
            const productNames = new Set();
            const uniqueProducts = [];
            
            Object.values(organizedData).forEach(branchData => {
                Object.values(branchData).forEach(product => {
                    if (!productNames.has(product.name)) {
                        productNames.add(product.name);
                        uniqueProducts.push(product);
                    }
                });
            });
            
            return uniqueProducts.sort((a, b) => a.name.localeCompare(b.name));
        }

        // بناء رأس الجدول
        function buildTableHeader(branches) {
            const productsText = appState.currentLang === 'ar' ? 'المنتجات' : 'Products';
            const sizeUnitText = appState.currentLang === 'ar' ? '(الحجم / الوحدة)' : '(Size / Unit)';
            const totalText = appState.currentLang === 'ar' ? 'الإجمالي' : 'Total';
            
            return `
                <thead>
                    <tr>
                        <th style="min-width: 200px;">
                            <div>${productsText}</div>
                            <div style="font-size: 10px; color: #666; margin-top: 4px;">${sizeUnitText}</div>
                        </th>
                        ${branches.map(branch => `
                            <th class="branch-header">${getAbbreviatedBranchName(branch)}</th>
                        `).join('')}
                        <th class="total-cell">${totalText}</th>
                    </tr>
                </thead>
            `;
        }

        // بناء جسم الجدول
        function buildTableBody(uniqueProducts, branches, organizedData) {
            const notSpecifiedText = appState.currentLang === 'ar' ? 'لم يحدد' : 'Not specified';
            
            return `
                <tbody>
                    ${uniqueProducts.map(product => `
                        <tr>
                            <td class="product-info">
                                <div class="product-name">${product.name}</div>
                                <div class="product-package">
                                    ${product.package && product.package !== '0' && product.package !== 'null' ? product.package : ''} 
                                    ${product.packageUnitname ? product.packageUnitname : ''}
                                    ${!product.package || product.package === '0' || product.package === 'null' ? notSpecifiedText : ''}
                                </div>
                            </td>
                            ${branches.map(branch => `
                                <td>
                                    ${organizedData[branch] && organizedData[branch][product.name] 
                                        ? formatNumber(organizedData[branch][product.name].requestedQty) 
                                        : '-'}
                                </td>
                            `).join('')}
                            <td class="total-cell">
                                ${formatNumber(calculateTotalForProduct(product.name, organizedData))}
                            </td>
                        </tr>
                    `).join('')}
                </tbody>
            `;
        }

        // اختصار اسم الفرع
        function getAbbreviatedBranchName(branch) {
            if (branch.length <= 8) return branch;
            
            const words = branch.split(' ');
            if (words.length > 1) {
                return words.map(word => word.charAt(0)).join('');
            }
            
            return branch.substring(0, 6);
        }

        // حساب الإجمالي للمنتج
        function calculateTotalForProduct(productName, organizedData) {
            let total = 0;
            Object.values(organizedData).forEach(branchData => {
                if (branchData[productName]) {
                    total += branchData[productName].requestedQty;
                }
            });
            return total;
        }

        // تنسيق الأرقام
        function formatNumber(number) {
            if (number === 0) return '0';
            if (!number) return '-';
            
            let numberStr = number.toString();
            
            if (numberStr.includes('.')) {
                numberStr = numberStr.replace(/\.0+$/, '');
                numberStr = numberStr.replace(/(\.\d*[1-9])0+$/, '$1');
            }
            
            return numberStr;
        }

        // تعيين حالة التحميل
        function setLoadingState(type, isLoading) {
            appState[type].isLoading = isLoading;
            
            if (isLoading) {
                $(`#loading-state-${type}`).removeClass('hidden');
                $(`#empty-state-${type}`).addClass('hidden');
                if (type === 'production') {
                    $('#production-data').addClass('hidden');
                } else {
                    $('#supply-data').addClass('hidden');
                }
            } else {
                $(`#loading-state-${type}`).addClass('hidden');
            }
        }

        // عرض الرسائل
        function showMessage(type, message, messageType = 'info') {
            const messageContainer = $(`#message-container-${type}`);
            const messageClass = messageType === 'error' ? 'error-message' : 
                               messageType === 'success' ? 'success-message' : 
                               'warning-message';
            
            messageContainer.html(`<div class="${messageClass}">${message}</div>`);
            
            setTimeout(() => {
                clearMessages(type);
            }, 5000);
        }

        // مسح الرسائل
        function clearMessages(type) {
            $(`#message-container-${type}`).empty();
        }
    </script>
</body>
</html>
